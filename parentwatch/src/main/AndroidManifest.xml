<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Audio recording permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Foreground service permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Wake lock -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Boot receiver -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Get tasks permission for foreground check -->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <!-- Package usage stats permission (for app tracking) -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
    android:theme="@style/Theme.ParentWatch"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Chat Activity -->
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Dual Location Map Activity -->
        <activity
            android:name=".DualLocationMapActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- QR Code Activity -->
        <activity
            android:name=".QrCodeActivity"
            android:exported="false"
            android:parentActivityName=".SettingsActivity"
            android:screenOrientation="portrait" />

        <!-- QR Scanner Activity -->
        <activity
            android:name=".QrScannerActivity"
            android:exported="false"
            android:parentActivityName=".SettingsActivity"
            android:screenOrientation="portrait" />

        <!-- About Activity -->
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Stats Activity -->
        <activity
            android:name=".StatsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Remote Camera Activity removed: this feature belongs to ParentMonitor only -->

        <!-- Location Service -->
        <service
            android:name=".service.LocationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location|microphone" />

        <!-- Audio Streaming Service -->
        <service
            android:name=".service.AudioStreamingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <!-- Chat Notification Service (deprecated - use ChatBackgroundService) -->
        <service
            android:name=".service.ChatNotificationService"
            android:enabled="false"
            android:exported="false" />

        <!-- Chat Background Service -->
        <service
            android:name=".service.ChatBackgroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Boot Receiver -->
        <receiver
            android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <!-- Notification Reply Receiver -->
        <receiver
            android:name=".receiver.NotificationReplyReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="ru.example.parentwatch.ACTION_REPLY" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
