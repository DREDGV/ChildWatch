<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- Audio recording permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Camera permission (optional for photo capture) -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Internet and network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- OSMdroid map tile caching -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    
    <!-- Foreground service permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Wake lock for keeping service alive -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Storage permissions for audio files and map tiles -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Contacts permission for child profile autofill -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <!-- Firebase Cloud Messaging (optional) -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChildWatch"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- Consent Activity - shown first -->
        <activity
            android:name=".ConsentActivity"
            android:exported="true"
            android:theme="@style/Theme.ChildWatch"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Parent Setup Activity (Onboarding) -->
        <activity
            android:name=".ParentSetupActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch"
            android:noHistory="true" />

        <!-- Child Selection Activity -->
        <activity
            android:name=".ChildSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch.NoActionBar" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch" />

        <!-- Settings Authentication Activity -->
        <activity
            android:name=".SettingsAuthActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch" />
        
        <!-- Dual Location Map Activity (Parent + Child) -->
        <activity
            android:name=".DualLocationMapActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch.NoActionBar" />
        
        <!-- Location Map Activity (2GIS) -->
        <activity
            android:name=".LocationMapActivity2GIS"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch"
            android:parentActivityName=".MainActivity" />

        <!-- Location Map Activity (Google Maps - backup) -->
        <activity
            android:name=".LocationMapActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch"
            android:parentActivityName=".MainActivity" />
        
        <!-- Photo Activity -->
        <activity
            android:name=".PhotoActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch" />
            
        <!-- Chat Activity -->
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch" />
            
        <!-- FileProvider for camera -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Audio Activity -->
        <activity
            android:name=".AudioActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch"
            android:parentActivityName=".MainActivity" />

        <!-- Audio Streaming Activity -->
        <activity
            android:name=".AudioStreamingActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.ChildWatch"
            android:parentActivityName=".MainActivity" />

        <!-- Audio Playback Service -->
        <service
            android:name=".service.AudioPlaybackService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- Chat Background Service -->
        <service
            android:name=".service.ChatBackgroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch"
            android:parentActivityName=".MainActivity" />

        <!-- QR Scanner Activity -->
        <activity
            android:name=".QrScannerActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch"
            android:parentActivityName=".SettingsActivity" />

        <!-- About Activity -->
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:theme="@style/Theme.ChildWatch"
            android:parentActivityName=".SettingsActivity" />
        
        <!-- Monitor Service - foreground service for location and audio monitoring -->
        <service
            android:name=".service.MonitorService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location|microphone" />
        
        <!-- Firebase Cloud Messaging Service (optional) -->
        <!-- 
        <service
            android:name=".service.FCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        -->
        
        <!-- Receiver for boot completed to restart monitoring if needed -->
        <receiver
            android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <!-- Receiver for notification reply actions -->
        <receiver
            android:name=".receiver.NotificationReplyReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="ru.example.childwatch.ACTION_REPLY" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".recordings.RecordingsLibraryActivity"
            android:exported="false"
            android:label="@string/title_recordings_library"
            android:parentActivityName=".AudioStreamingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.example.childwatch.AudioStreamingActivity" />
        </activity>

    </application>

</manifest>

