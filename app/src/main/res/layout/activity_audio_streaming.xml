<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/md_theme_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/audio_monitor_title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/deviceIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/audio_monitor_device_unknown"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/md_theme_light_surface"
            app:strokeColor="@color/md_theme_light_outlineVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/audio_monitor_section_status"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_monitor_label_state"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_monitor_state_stopped"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_monitor_label_start_time"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/startTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_monitor_time_placeholder"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_monitor_label_duration"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/durationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_monitor_duration_placeholder"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:textColor="?attr/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_monitor_label_chunks"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/chunksReceivedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_monitor_placeholder_zero"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recording Mode Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/audio_monitor_section_recording"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_monitor_label_record_toggle"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/recordingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/openRecordingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/audio_monitor_button_open_recordings"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Audio Controls Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/audio_monitor_section_controls"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <!-- Volume Control -->
                <LinearLayout
                    android:id="@+id/volumeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:src="@android:drawable/ic_lock_silent_mode_off"
                            android:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/audio_monitor_label_volume"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/volumeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/audio_monitor_volume_default"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            android:minWidth="50dp"
                            android:gravity="end" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/volumeSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="100"
                        android:value="100"
                        android:stepSize="5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/audio_monitor_volume_modes"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/volumeModeBtn"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:minHeight="64dp"
                        android:text="@string/audio_monitor_volume_mode_quiet"
                        android:textSize="18sp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        app:icon="@android:drawable/ic_lock_silent_mode_off"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="36dp" />

                </LinearLayout>

                <!-- Connection Quality Indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/signalIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_monitor_label_connection_quality"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/connectionQualityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- HUD Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/hudModeButton"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audio_monitor_hud_toggle_expanded"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSurface" />
        </LinearLayout>

        <!-- Enhanced Diagnostics HUD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/diagnosticsHud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#DD000000">

            <LinearLayout
                android:id="@+id/hudContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Row 1: Connection & Network -->
                <LinearLayout
                    android:id="@+id/hudRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/hudWsStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#000000"
                        android:shadowRadius="2"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/hudNetwork"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#000000"
                        android:shadowRadius="2"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/hudDataRate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#000000"
                        android:shadowRadius="2"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/hudPing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#000000"
                        android:shadowRadius="2"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/hudBattery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#000000"
                        android:shadowRadius="2"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Row 2: Audio & Quality -->
                <LinearLayout
                    android:id="@+id/hudRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/hudAudioStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#000000"
                        android:shadowRadius="2"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/hudQueue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#000000"
                        android:shadowRadius="2"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/hudTotalData"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#000000"
                        android:shadowRadius="2"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/hudSampleRate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:shadowColor="#000000"
                        android:shadowRadius="2"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Audio Visualizer Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/visualizationModeBtn"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:text="@string/audio_monitor_visualizer_button"
                    android:textSize="16sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    app:icon="@android:drawable/ic_menu_slideshow"
                    app:iconGravity="textStart"
                    app:iconPadding="16dp"
                    app:iconSize="32dp"
                    android:layout_marginBottom="16dp" />

                <ru.example.childwatch.ui.AdvancedAudioVisualizer
                    android:id="@+id/advancedAudioVisualizer"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@android:drawable/ic_lock_silent_mode_off"
                        android:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_monitor_label_signal_level"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/signalLevelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_monitor_placeholder_dash"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Audio Filter Modes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/audio_monitor_section_filters"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/filterRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/modeDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/audio_monitor_filters_description"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textStyle="italic"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleStreamingBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/audio_monitor_toggle_start"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_btn_speak_now" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/audio_monitor_info_text"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</ScrollView>
